<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddImageActivity">

    <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/text_label_margin"
            android:layout_marginTop="@dimen/text_label_margin"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/addNameLabel"/>
    <TextView
            android:text="@string/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/addUrlLabel" android:layout_marginTop="@dimen/text_label_margin"
            app:layout_constraintTop_toBottomOf="@+id/addNameInput"
            android:layout_marginStart="@dimen/text_label_margin"
    />
    <TextView
            android:text="@string/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/addTagsLabel" android:layout_marginTop="@dimen/text_label_margin"
            app:layout_constraintTop_toBottomOf="@+id/addUrlInput"
            android:layout_marginStart="@dimen/text_label_margin"/>
    <Button
            android:text="@string/add_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addFinishButton" android:layout_marginBottom="@dimen/main_button_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin" android:backgroundTint="@color/colorPrimary"/>
    <Button
            android:text="@string/add_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addTagButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/button_margin"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/addTagsInput"
            app:layout_constraintBottom_toBottomOf="@+id/addTagsInput"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/addNameInput"
            android:layout_marginTop="@dimen/text_edit_margin" app:layout_constraintTop_toBottomOf="@+id/addNameLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/text_edit_margin"
            android:layout_marginEnd="@dimen/text_edit_margin" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/addUrlInput" android:layout_marginTop="@dimen/text_edit_margin"
            app:layout_constraintTop_toBottomOf="@+id/addUrlLabel" android:layout_marginStart="@dimen/text_edit_margin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/text_edit_margin"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/addTagsInput" android:layout_marginTop="@dimen/text_edit_margin"
            app:layout_constraintTop_toBottomOf="@+id/addTagsLabel" android:layout_marginStart="@dimen/text_edit_margin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/text_edit_margin"
            app:layout_constraintEnd_toStartOf="@+id/addTagButton"/>
    <TextView
            android:text="@string/added_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addTagsText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/text_label_margin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/text_label_margin"
            android:layout_marginTop="@dimen/text_label_margin"
            app:layout_constraintTop_toBottomOf="@+id/addTagsInput"/>
</android.support.constraint.ConstraintLayout>